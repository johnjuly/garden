filters:
  or:
    - file.name.contains(this.file.name)
    - created.toString().contains(this.file.name)
    - start.toString().contains(this.file.name)
    - end.toString().contains(this.file.name)
    - file.links.contains(this.file)
    - file.folder == "dailynote"
    - file.basename.startsWith("2025")
properties:
  file.name:
    displayName: Entry
  note.categories:
    displayName: Categories
  note.created:
    displayName: Created
  note.tags:
    displayName: Tags
views:
  - type: table
    name: Daily notes
    filters:
      and:
        - file.folder == "dailynote"
    order:
      - file.name
      - created
      - categories
      - tags
    sort:
      - property: categories
        direction: DESC
      - property: tags
        direction: DESC
      - property: Created
        direction: ASC
      - property: created
        direction: ASC
    columnSize:
      file.name: 287
      note.created: 128
      note.categories: 119
  - type: table
    name: Monthly
    filters:
      and:
        - '!tags.contains("daily")'
        - '!tags.contains("monthly")'
    order:
      - file.name
      - categories
      - created
    sort:
      - property: file.name
        direction: ASC
      - property: created
        direction: DESC
  - type: table
    name: Yearly
    filters:
      and:
        - '!tags.contains("daily")'
        - '!tags.contains("monthly")'
    order:
      - file.name
      - categories
      - created
    sort:
      - property: file.name
        direction: ASC
      - property: created
        direction: ASC
